<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
           
	<http auto-config="true" use-expressions="true">
	    <intercept-url pattern="/**/*.js" access="permitAll"/>     
    	<intercept-url pattern="/**/*.css" access="permitAll"/>
    	<intercept-url pattern="/resources/**/*" access="permitAll"/>

		<intercept-url pattern="/member/**" access="hasAnyRole('ROLE_USER', 'ROLE_SELLER')" />
		<intercept-url pattern="/seller/**" access="hasRole('ROLE_SELLER')" />
		<intercept-url pattern="/admin/**" access="hasRole('ROLE_ADMIN')" />
		<intercept-url pattern="/**" access="permitAll"/>

			<form-login
				login-page="/login"
				username-parameter="id" 
				password-parameter="pw"		
				login-processing-url="/loginProcess"
				authentication-failure-url="/login?fail=true"
				default-target-url="/"
				always-use-default-target="true"
			/> 
			<!-- 
				login-page: 로그인  페이지
				authentication-failure-url: 로그인 실패시 이동할 페이지, 여기서는 로그인 페이지로 재이동하여 재로그인을 유도한다.
				default-target-url: 로그인 성공시 이동할 페이지
				always-use-default-target: true 이면 항상 default-target-url에 명시된 페이지로 이동한다.
			 -->

			<logout 
				logout-url="/logout"
				logout-success-url="/"
				invalidate-session="true"
			/>
		
		<!-- csrf 기능은 꺼둔다. 잘 모르니까!!! -->
		<csrf disabled="true"/>
	</http> 

	<context:component-scan base-package="com.hellomart.authentication"></context:component-scan>

    <authentication-manager>
    	<authentication-provider ref="DBAuthenticationProvider"/>
		<authentication-provider user-service-ref="DBAuthenticationService"/>
	</authentication-manager>


</beans:beans>
